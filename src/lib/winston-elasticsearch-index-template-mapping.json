{
  "index_patterns": "logs-YY.MM.DD",
  "settings": {
    "number_of_replicas": 0,
    "number_of_shards": 1,
    "index": {
      "refresh_interval": "5s"
    }
  },
  "mappings": {
    "_doc": {
      "_source": { "enabled": true },
      "properties": {
        "@timestamp": { "type": "date" },
        "@version": { "type": "keyword" },
        "fields": {
          "dynamic": true,
          "properties": { }
        },
        "message": { "type": "text", "index": true },
        "severity": { "type": "keyword", "index": true }
      }
    }
  }
}
